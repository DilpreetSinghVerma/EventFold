{
    "version": 2,
    "builds": [
        {
            "src": "api/index.cjs",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/public"
            }
        }
    ],
    "functions": {
        "api/**/*.cjs": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.cjs"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}